{% extends 'base.html.twig' %}

{% block body %}
    <div class="backgrounded filled">
        <div class="container h-100 spaced">
            <div class="row h-100 align-items-center">
                <div class="col-12 p-0 card mb-3 bg-dark border-light text-white">

                    {% if not isEditing %}
                        <h2 class="card-header border-secondary text-center">Création d'article</h2>
                    {% else %}
                        <h2 class="card-header border-secondary text-center">Modification d'article</h2>
                    {% endif %}

                    <div class="container p-4">
                        {{ form_start(addForm) }}
                        {{ form_row(addForm.artName, { 'label': 'Nom de l\'article'}) }}
                        {{ form_row(addForm.artContent, {'label': 'Contenu de l\'article'}) }}
                        {{ form_row(addForm.artImage, {'label': 'Image de l\'article (optionnelle)', 'placeholder': 'Choisir une image pour l\'article'})}}
                        {{ form_row(addForm.artSections, {'label': 'Sections:'})}}
                        
                        {% if not isEditing %}
                            <button type="submit" class="btn btn-primary">Créer l'article</button>
                        {% else %}
                            <button type="submit" class="btn btn-primary">Modifier l'article</button>
                        {% endif %}
                        
                        {{ form_end(addForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}