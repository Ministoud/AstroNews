{% extends 'base.html.twig' %}

{% block body %}<div class="backgrounded filled">
    <div class="container h-100 spaced">
        <div class="row h-100 align-items-center">
            {% if app.user is empty %}
                {% if error is not null %}
                    <div class="col-12 text-center alert alert-danger alert-dismissible fade show">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                {% endif %}

                <div class="col-12 p-0 card mb-3 bg-dark border-light text-white">
                    <h2 class="card-header border-secondary text-center">Se connecter</h2>
                    <div class="container p-4">
                        <form action="{{ path('login') }}" method="post">
                            <div class="form-group">
                                <input type="text" value="{{ last_username }}" required name="_username" placeholder="Email de connexion" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="password" required name="_password" placeholder="Mot de passe" class="form-control">
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-success">Se connecter</button>
                            </div>
                        </form>
                    </div>
            {% else %}
                <div class="col-12 text-center alert alert-danger alert-dismissible fade show">
                    Vous êtes déjà connecté !
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
