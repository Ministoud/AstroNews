{% extends 'base.html.twig' %}

{% block body %}
    <div class="backgrounded filled">
            <div class="container h-100 spaced">
                <div class="row h-100 align-items-center">
                    <div class="col-12 p-0 card mb-3 bg-dark border-light text-white">
                        <h2 class="card-header border-secondary text-center">Créer un compte</h2>
                        <div class="container p-4">
                            {{ form_start(registerForm) }}
                            {{ form_row(registerForm.useFirstName, {'label': "Prénom"} )}}
                            {{ form_row(registerForm.useLastName, {'label': "Nom"} )}}
                            {{ form_row(registerForm.useEmail, {'label': "Email"} )}}
                            {{ form_row(registerForm.plainPassword)}}
                            <button type="submit" class="btn btn-primary">S'inscrire</button>
                            {{ form_end(registerForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}
